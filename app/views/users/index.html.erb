<h1>Users</h1>
<table>
	<tr>
		<th>Firstname</th>
		<th>Lastname</th>
		<th>Email</th>
		<th>Employee</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>

	<% users.each do |u| %>
		<tr>
			<td><%= u.firstname %></td>
			<td><%= u.lastname %></td>
			<td><%= u.email %></td>
			<td><%= u.employee %></td>
			<td><%= link_to 'Edit', edit_user_path(u) %></td>
			<td><%= link_to 'Delete', user_path(u), method: :delete %></td>
		</tr>
	<% end %>
</table>
<%= link_to 'Create new user', new_user_path %>